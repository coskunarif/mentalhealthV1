rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isCurrentUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Exercise data - allow read access to all authenticated users
    match /exercises/{exerciseId} {
      allow read: if isSignedIn();
      allow write: if false; // Only admin can modify exercises
    }

    // User profile data
    match /users/{userId} {
      allow read: if isSignedIn();  // Allow any authenticated user to read
      allow write: if isCurrentUser(userId);
      
      // User progress subcollection
      match /progress/{progressId} {
        allow read: if isSignedIn();
        allow write: if isCurrentUser(userId);
      }
      
      // User activities subcollection
      match /activities/{activityId} {
        allow read: if isSignedIn();
        allow create, update: if isCurrentUser(userId);
        allow delete: if isCurrentUser(userId);
      }
    }

    // Mood tracking data
    match /moods/{moodId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Survey responses
    match /surveys/{surveyId} {
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow delete: if false;
    }
  }
}
