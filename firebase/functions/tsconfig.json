{
  "compilerOptions": {
    "lib": ["es2017", "es2018", "es2019", "es2020"],  // Remove DOM lib
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true  // Add this line to skip type checking of declaration files
  },
  "compileOnSave": true,
  "include": ["src"]
}