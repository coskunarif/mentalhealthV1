{
  "compilerOptions": {
    "lib": [
      "es2020",
      "es2021",
      "es2022",
      "es2018"
    ],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/types/firebase-admin.d.ts"
  ]
}